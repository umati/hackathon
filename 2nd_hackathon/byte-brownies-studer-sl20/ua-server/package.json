{
  "name": "ua-server",
  "version": "0.1.1",
  "description": "Small opcua server, that uses umati nodeset files. Also uses a mqtt client to fetch data.",
  "private": true,
  "license": "MIT",
  "contributors": [
    {
      "name": "Timo Barth",
      "email": "timo.barth@codewerk.de"
    },
    {
      "name": "Mohammad Mohammad",
      "email": "mohammad.mohammad@codewerk.de"
    }
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "kill:port": "npx kill-port",
    "docker:build": "docker build -t cw.opcua.umati.server:latest .",
    "docker:up": "docker compose up"
  },
  "dependencies": {
    "@nestjs/common": "11.1.12",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.12",
    "@nestjs/platform-express": "11.1.12",
    "async-mqtt": "^2.6.3",
    "express": "5.2.1",
    "lodash": "4.17.23",
    "mqtt": "5.14.1",
    "node-opcua": "2.161.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.16",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.12",
    "@types/express": "^5.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "25.1.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "prettier": "3.8.1",
    "source-map-support": "0.5.21",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "webpack": "5.104.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
